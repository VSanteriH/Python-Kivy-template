WindowManager: #Handless window views
    MainWindow:
    SecondWindow:
    DLWindow:
    DMWindow:
    DRWindow:
<P>: #Popup window
    Label:
        text: "Add new Item"
        size_hint:0.6, 0.2
        pos_hint: {"x": 0.2, "top":1}
    Button:
        text: "Add"
        size_hint:0.8, 0.2
        pos_hint: {"x": 0.1, "top":0.1}
        on_release: root.ClosePopup()

<MainWindow>: #Main windows view
    name: "main"

    GridLayout:
        cols:1
        rows:3
        GridLayout: #Up bar
            cols:3
            rows:1
            canvas.before:
                Color:
                    rgba: .5, 1, .5, 1 
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint:0.02, 0.1
            spacing: 70, 0
           
            Image:
                source: 'images/my_app.png'
                padding : 10
            Image:
                source: 'images/my_app.png'
            Button: 
                background_color:(0, 0, 0, 0)#transperent
                on_release: 
                    app.root.current= "second"
                    root.manager.transition.direction = "left"
                Image:
                    source: 'icons/menu-4x.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    color: [1,1,1,1] #white
                  
        GridLayout:#Mid 
            cols:1 
             
            canvas.before:
                Color:
                    rgba: .8, .8, .8, 1 
                Rectangle:
                    size: self.size
                    pos: self.pos    
            GridLayout:#Inner 
                cols:1
                rows:3 
                Label:
                    canvas.before: 
                        Color:
                            rgba: .5, .5, .5, .5
                        Line:
                            width: 2
                            rectangle: self.x -1, self.y, self.width + 4, self.height -2
                    text: "Lorem"
                    
                    text_size: self.size
                    halign: 'left'
                    valign: 'top'
                    padding_x: 15
                    padding_y: 10
                    color: 1, 1, 1, 1
            Label:
                canvas.before: 
                    Color:
                        rgba: .1, .1, .1, .5
                    Line:
                        width: 2
                        rectangle: self.x -1, self.y, self.width + 4, self.height -2
                text: "Lorem"
                
                text_size: self.size
                halign: 'left'
                valign: 'top'
                padding_x: 15
                padding_y: 10
                color: 0, 0, 1, 1
            Label:
                canvas.before: 
                    
                    Color:
                        rgba: .1, .1, .1, .5
                    Line:
                        width: 2
                        rectangle: self.x -1, self.y, self.width + 4, self.height -2
                text: "Lorem"
                
                text_size: self.size
                halign: 'left'
                valign: 'top'
                padding_x: 15
                padding_y: 10
                color: 0, 0, 1, 1
                          
           
     
        GridLayout: #Down bar
            cols:3
            rows:1
            size_hint:0.02, 0.08
            spacing: 50, 0
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1 
                Rectangle:
                    size: self.size
                    pos: self.pos
            Button: 
                background_color:(1, 1, 1, 0)
                size_hint:0.5, 0.2
                on_release: 
                    app.root.current= "DLWindow"
                    root.manager.transition.direction = "up"
                Image:
                    source: 'icons/folder-4x.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    color: [1,1,1,1] #white   

            Button: 
                background_color:(1, 1, 1, 0)
                size_hint:0.5, 0.2
                on_release: root.OpenPopup()
                Image:
                    source: 'icons/plus-4x.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    color: [1,1,1,1] #white   
                
            Button: 
                background_color:(1, 1, 1, 0)
                size_hint:0.5, 0.2
                on_release: 
                    app.root.current= "DRWindow"
                    root.manager.transition.direction = "up"
                Image:
                    source: 'icons/person-4x.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    color: [1,1,1,1] #white   
               


<SecondWindow>:
    name: "second"
    GridLayout:
        cols:1
        GridLayout:
            cols:3
            size_hint:0.02, 0.02
            spacing: 70, 0

            Button:
                size_hint:0.3, 0.2
                text: "Go Back"
                on_release: 
                    app.root.current= "main"
                    root.manager.transition.direction = "right"
            Image:
                source: 'images/my_app.png'
                size_hint:0.5, 0.2
                padding : 10
 
        Label:
            text: "Settings"
            size_hint:0.6, 0.2
            pos_hint: {"x": 0.2, "top":1}
            color: 1, 0, 0, 1
    
<DLWindow>
    name: "DLWindow"
<DMWindow>
    name: "DMWindow"
<DRWindow>
    name: "DRWindow"



