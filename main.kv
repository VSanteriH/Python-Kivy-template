WindowManager: #Handless window views
    MainWindow:
    SecondWindow:
    DLWindow:
    DMWindow:
    DRWindow:
    
<P>: #Popup window
    Label:
        text: "Add new Item"
        size_hint:0.6, 0.2
        pos_hint: {"x": 0.2, "top":1}
    TextInput
        text: 'Type something...'
        size_hint:1, .3
        pos_hint: {"x": 0, "top":0.8}
    Button:
        text: "Add"
        size_hint:0.8, 0.2
        pos_hint: {"x": 0.1, "top":0.1}
        on_release: root.ClosePopup()


<TextContent>: 
    
<Article>:
    BoxLayout:#outerlines
        size:(root.width,2050)

        canvas.before: 
            Color:
                rgba: .7, .9, .8, .9
            Line:
                width: 2
                rectangle: self.x -1, self.y, self.width + 2, self.height -2
        orientation: 'vertical'
        Label:#title
            text: root.label_title
            text_size: root.width, root.height/2
            halign: 'left'
            valign: 'top'
            padding_x: 5
            padding_y: 2
            color: 0, .1, .2, 1
            font_size : 20

        Label:#text
            text: root.label_text
            size: self.width , self.height

            text_size: root.width, root.height / 1.7
            halign: 'left'
            valign: 'top'
            padding_x: 5
            padding_y: 0
            
            color: 0, .1, .2, 1
        
<MainWindow>: #Main windows view
    name: "main"

    GridLayout:
        cols:1
        rows:3
        GridLayout: #Up bar
            cols:3
            rows:1
            canvas.before:
                Color:
                    rgba: .5, 1, .5, 1 
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint:1, 0.1
            spacing: 70, 0
           
            Image:
                source: 'icons/aperture-4x.png'
                color: [1,1,1,0]
                size_hint:.95, 0.1
            Image:
                source: 'icons/aperture-4x.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
            Button: 
                background_color:(0, 0, 0, 0)#transperent
                on_release: 
                    app.root.current= "second"
                    root.manager.transition.direction = "left"
                Image:
                    source: 'icons/menu-4x.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    color: [1,1,1,1] #white
                  
        BoxLayout:#Mid 
            ScrollView:
                size_hint: 1.0, 1
                height:root.height - 200
                pos_hint: {'center_y':0.5}
                bar_width: 2

                GridLayout:
                    cols: 1
                    size_hint_y: None
                    height: root.height + 1000 #Determs Articles size
                    TextContent:
                 

        GridLayout: #Down bar
            cols:3
            rows:1
            size_hint:0.02, 0.08
            spacing: 50, 0
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1 
                Rectangle:
                    size: self.size
                    pos: self.pos
            Button: 
                background_color:(1, 1, 1, 0)
                size_hint:0.5, 0.2
                on_release: 
                    app.root.current= "DLWindow"
                    root.manager.transition.direction = "up"
                Image:
                    source: 'icons/folder-4x.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    color: [1,1,1,1] #white   

            Button: 
                background_color:(1, 1, 1, 0)
                size_hint:0.5, 0.2
                on_release: root.OpenPopup()
                Image:
                    source: 'icons/plus-4x.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    color: [1,1,1,1] #white   
                
            Button: 
                background_color:(1, 1, 1, 0)
                size_hint:0.5, 0.2
                on_release: 
                    app.root.current= "DRWindow"
                    root.manager.transition.direction = "up"
                Image:
                    source: 'icons/person-4x.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    color: [1,1,1,1] #white   
               


<SecondWindow>:
    name: "second"
    GridLayout:
        cols:1
        rows:3
        GridLayout: #Up bar
            cols:1
            rows:1
            canvas.before:
                Color:
                    rgba: .5, 1, .5, 1 
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint:1, 0.02

            Button: 
                background_color:(0, 0, 0, 0)#transperent
                on_release: 
                    app.root.current= "main"
                    root.manager.transition.direction = "right"
                Image:
                    source: 'icons/arrow-circle-left-4x.png'    
                    center_y: self.parent.center_y         
                    color: [1,1,1,1] #white
        Label:
            text: "Settings"
            size_hint:0.6, 0.2
            pos_hint: None,None
            color: 0, 0, 0, 1
    
<DLWindow>
    name: "DLWindow"
    GridLayout: #Down bar
        cols:1
        rows:1
        size_hint:1, 0.08

        canvas.before:
            Color:
                rgba: 0, 0, 0, 1 
            Rectangle:
                size: self.size
                pos: self.pos
        Button: 
            background_color:(1, 1, 1, 0)
            size_hint:0.5, 0.2
            on_release: 
                app.root.current= "main"
                root.manager.transition.direction = "down"
            Image:
                source: 'icons/arrow-circle-bottom-4x.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                color: [1,1,1,1] #white   


<DRWindow>
    name: "DRWindow"
    GridLayout: #Down bar
        cols:1
        rows:1
        size_hint:1, 0.08
        spacing: 50, 0
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1 
            Rectangle:
                size: self.size
                pos: self.pos
        Button: 
            background_color:(1, 1, 1, 0)
            size_hint:0.5, 0.2
            on_release: 
                app.root.current= "main"
                root.manager.transition.direction = "down"
            Image:
                source: 'icons/arrow-circle-bottom-4x.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                color: [1,1,1,1] #white   




