WindowManager: #Handless window views. Add "Screen" subclass to classes you want to use this.
    MainWindow:
    SecondWindow:
    DownLWindow:
    DownRWindow:

#:import Factory kivy.factory.Factory


<AddNewPop@Popup>: #Popup window and content
    size_hint: .9, .85
    title: "New article"
    FloatLayout:
        Label:
            text: "Title"
            size_hint:.2, 0.15
            pos_hint: {"x": 0, "top":1}
        TextInput:
            id: Title
            text: ''
            size_hint:1, .1
            pos_hint: {"x": 0, "top":0.9}
        Label:
            text: "Text"
            size_hint:.2, 0.15
            pos_hint: {"x": 0, "top":.8}    
        TextInput:
            id: Text
            text: ''
            size_hint:1, .5
            pos_hint: {"x": 0, "top":0.7}
        Button:
            text: "Add"
            size_hint:0.4, 0.1
            pos_hint: {"center_x": 0.5, "top":.12}
            on_release: app.AddToList(Title.text,Text.text), root.dismiss()

<TextContent@BoxLayout>: #Content is made inside content.py 
    
# Single article element with 2 text labels
<Article>: 
    size : root.width, root.sizeY # Sets one article box size
    size_hint :1, None
    BoxLayout:  #Article background
        orientation: 'vertical'
        canvas: 
            Color:
                #rgba: root.r, root.b, root.g, .4 # Random color
                rgba: .6, .8, .6, .6
            Rectangle:
                size: self.width, self.height- 4 # increase to make lines thicker
                pos: self.pos

        Label:#title
            text: root.title
            text_size: root.width, root.height/5 # Needed for halign and valign
            halign: 'left'
            valign: 'top'
            padding_x: 5
            padding_y: 0
            color: 0, .1, .2, 1
            font_size : 20


        Label:#text
            text: root.text
            size: self.width , self.height
            text_size: root.width, root.height / 1.3 # Needed for halign and valign
            halign: 'left'
            valign: 'top'
            padding_x: 5
            padding_y: 10   
            color: 0, .1, .2, 1
        
<MainWindow>: #Main content
    name: "main"

    GridLayout:
        cols:1
        rows:3
        GridLayout: #Up bar
            cols:3
            rows:1
            canvas.before:
                Color:
                    rgba: .5, 1, .5, .9
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint:1, 0.1
            spacing: 70, 0
           
            Image: #Hidden
                source: 'icons/aperture-4x.png'
                color: [1,1,1,0]

            Image: #Logo ect
                source: 'icons/aperture-4x.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

            Button: #Hamburger that takes to right side menu
                background_color:(0, 0, 0, 0)#transperent
                on_release: 
                    app.root.current= "second"
                    root.manager.transition.direction = "left"
                Image:
                    source: 'icons/menu-4x.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    color: [1,1,1,1] #white
                      
        GridLayout: # Mid 
            cols:1
            ScrollView:
                size_hint: 1, None
                pos_hint: {'center_y':0.5}
                bar_width: 2
                size : root.width, root.height - root.height/6.5 # Minus downbar height

                TextContent:
                 

        GridLayout: 
            cols:3
            rows:1
            size_hint:0.02, 0.08
            spacing: 50, 0
            canvas.before: 
                Color:
                    rgba: 0, 0, 0, 1 
                Rectangle:
                    size: self.size
                    pos: self.pos
            Button: #Left down menu 
                background_color:(1, 1, 1, 0)#Transperent
                size_hint:0.5, 0.2
                on_release: 
                    app.root.current= "DownLWindow"
                    root.manager.transition.direction = "up"
                Image:
                    source: 'icons/folder-4x.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    color: [1,1,1,1] #white   

            Button: #Popup ###################################################
                background_color:(1, 1, 1, 0) # Transperent
                size_hint:0.5, 0.2
                on_release: Factory.AddNewPop().open()
                #on_release: root.UpdateSite()
                Image:
                    source: 'icons/plus-4x.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    color: [1,1,1,1] #white   
                
            Button: #Right down menu 
                background_color:(1, 1, 1, 0) # Transperent
                size_hint:0.5, 0.2
                on_release: 
                    app.root.current= "DownRWindow"
                    root.manager.transition.direction = "up"
                Image:
                    source: 'icons/person-4x.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    color: [1,1,1,1] #white   
               


<SecondWindow>: #Window under hamburger menu
    name: "second"
    GridLayout:
        cols:1
        rows:2
        GridLayout: #Up bar
            cols:1
            rows:1
            canvas.before:
                Color:
                    rgba: .5, 1, .5, 1 
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint:1, 0.02

            Button: #Button back to main view
                background_color:(0, 0, 0, 0) # Transperent
                on_release: 
                    app.root.current= "main"
                    root.manager.transition.direction = "right"
                Image:
                    source: 'icons/arrow-circle-left-4x.png'    
                    center_y: self.parent.center_y         
                    color: [1,1,1,1] # White
        GridLayout: #Menu    
            cols:1
            rows:4
            size_hint: 1, None
            height: root.height - 55
            canvas.before:
                Color:
                    rgba: .7, .9, .8, .4
                Rectangle:
                    size: self.size
                    pos: self.pos
             
            Button: 
                background_color:(1, 1, 1, .1)
                size_hint_y: None
                height: root.height / 8
                text: "Profile"
                text_size: root.width, root.height
                halign: 'left'
                valign: 'center'
                color: 0, .1, .2, 1
                padding_x: 20
                font_size: 25
            Button: 
                background_color:(1, 1, 1, .1)
                size_hint_y: None
                height: root.height /8
                text: "News"
                text_size: root.width, root.height
                halign: 'left'
                valign: 'center'
                color: 0, .1, .2, 1
                padding_x: 20
                font_size: 25
            Button: 
                background_color:(1, 1, 1, .1)
                size_hint_y: None
                height: root.height/8
                text: "Settings"
                text_size: root.width, root.height
                halign: 'left'
                valign: 'center'
                color: 0, .1, .2, 1
                padding_x: 20
                font_size: 25
            Button: 
                background_color:(1, .2, .2, .14)
                size_hint_y: None
                height: root.height / 8
                text: "Log out"
                text_size: root.width, root.height
                halign: 'left'
                valign: 'center'
                color: .5, .1, .2, 1 #red
                padding_x: 20
                font_size: 25
        
    
<DownLWindow>: # Down left menu
    name: "DownLWindow"
    GridLayout: # Down bar
        cols:1
        rows:1
        size_hint:1, 0.08

        canvas.before:
            Color:
                rgba: 0, 0, 0, 1 
            Rectangle:
                size: self.size
                pos: self.pos
        Button: #Back to main view
            background_color:(1, 1, 1, 0) #Transperent
            size_hint:0.5, 0.2
            on_release: 
                app.root.current= "main"
                root.manager.transition.direction = "down"
            Image:
                source: 'icons/arrow-circle-bottom-4x.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                color: [1,1,1,1]   


<DownRWindow>: # Right down menu 
    name: "DownRWindow"
    GridLayout: # Down bar
        
        cols:1
        rows:1
        size_hint:1, 0.08
        spacing: 50, 0
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1 
            Rectangle:
                size: self.size
                pos: self.pos
        Button: #Back to main view
            background_color:(1, 1, 1, 0)# Transperent
            size_hint:0.5, 0.2
            on_release: 
                app.root.current= "main"
                root.manager.transition.direction = "down"
            Image:
                source: 'icons/arrow-circle-bottom-4x.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                color: [1,1,1,1] # white   




